<Page x:Class="WpfFill.Views.Pages.ActionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFill.Views.Pages"
      mc:Ignorable="d" 
      FontSize="16"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActionPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="NameMaterial" />
            <TextBox Width="300"  Text="{Binding Material.NameMaterial}"/>
            <TextBlock Text="IDMaterial"/>
            <TextBox Width="300" Text="{Binding Material.IDMaterial}"/>
            <TextBlock Text="Quanity"/>
            <TextBox Width="300" Text="{Binding Material.Quanity}"/>
            <TextBlock Text="unit"/>
            <TextBox Width="300" Text="{Binding Material.Unit}"/>
            <TextBlock Text="Quanity1"/>
            <TextBox Width="300" Text="{Binding Material.Quanity1}"/>
            <TextBlock Text="minimum"/>
            <TextBox Width="300" Text="{Binding Material.Minimum}"/>
            <TextBlock Text="cost"/>
            <TextBox Width="300" Text="{Binding Material.cost}"/>
            <Button Content="Save" Name="savebtn" Margin="0,10,0,0" Click="savebtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
